{
  "name": "WestChart_ReactApp",
  "version": "0.13.0",
  "private": true,
  "engines": {
    "node": "8.9.1",
    "npm": "5.5.1"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "eslint": "4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "7.6.1",
    "istanbul": "0.4.5",
    "jest": "22.1.4",
    "jest-cli": "22.1.4",
    "prettier": "^1.10.2"
  },
  "scripts": {
    "start:dev_srv": "concurrently --prefix \"[{name}]\" -c \"green.dim,blue.italic\" --names \"Client,Server\" \"npm run start:dev\" \"npm run start:srv\"",
    "start:dev": "cd web && yarn start",
    "start": "node server",
    "lint": "eslint \"**/*.@(js|jsx)\"",
    "format": "npm run lint -- --fix",
    "start:srv": "cd server && yarn start:srv",
    "build": "node web/scripts/build.js",
    "test": "jest --coverage --env=jsdom"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "web/src/**/*.{js,jsx}",
      "server/src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/web/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "[/\\\\](build|docs|node_modules|scripts|coverage)[/\\\\]"
    ],
    "notify": true,
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/web/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/web/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "react-app"
    ]
  },
  "dependencies": {
    "concurrently": "^3.5.1"
  }
}
